<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saryoto.uploadimage">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HalamanAwal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewImage"
            android:label="@string/title_activity_view_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImageListView"
            android:label="list view" />
        <activity
            android:name=".ViewFullImage"
            android:label="image view"
            android:parentActivityName=".ImageListView" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_camera_on_storage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PhotoIntentActivity"
            android:label="@string/title_activity_camera_on_storage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ServerLokal"
            android:label="@string/title_activity_server_lokal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
